.row
  %h1 Create Job

.row.job
  = simple_form_for model do |f|
    .row
      = f.input :title, placeholder: "Title", label: false
    .row
      = f.input :company, placeholder: "Company", label: false
    .row
      = f.input :requirements, placeholder: "Requirements", label: false
    .row
      = f.input :description, placeholder: "Description", label: false
    .row
      = f.input :user_count, placeholder: "Number of Position to fulfill", label: false
    .row
      = f.input :salary, placeholder: "Salary", label: false
    .row
      .small-6.columns
        = f.input :starts_at, input_html: {class: "DatePicker"} #tomorrow is the starting day
      .small-6.columns
        = f.input :ends_at, input_html: {class: "DatePicker"} #tomorrow is the starting day
    .row.small-5.small-centered.columns.text-center
      = f.submit nil, class: 'success button'

:javascript
  var today = new Date();
  var tomorrow = new Date();
  var dd = today.getDate()+1;
  var mm = today.getMonth()+1; //January is 0!
  var yyyy = today.getFullYear();
  tomorrow = dd+'-'+mm+'-'+yyyy+' 09:00';
  
  $(function(){
    $('.DatePicker').fdatepicker({
      initialDate: tomorrow,
      format: 'dd-mm-yyyy hh:ii',
      disableDblClickSelection: true,
      pickTime: true
    });
  });